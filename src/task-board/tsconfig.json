{
  "compilerOptions": {
    "module": "commonjs",
    "inlineSourceMap": true,
    "target": "es5",
    "lib": ["es2018"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@models/*": ["./models/*"],
      "@my-types/*": ["./types/*"]
    }
  }
}
